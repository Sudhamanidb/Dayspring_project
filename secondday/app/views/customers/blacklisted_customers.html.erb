<div style="
  min-height: 100vh;
  background: linear-gradient(120deg, #5670f0, #9333ea, #f0f1f5);
  padding: 40px;
  font-family: 'Segoe UI', Arial, sans-serif;
">


<div style="
  min-height: 100vh;
  background: linear-gradient(120deg, #5670f0, #9333ea, #f0f1f5);
  padding: 40px;
  font-family: 'Segoe UI', Arial, sans-serif;
">

  <div style="
    max-width: 900px;
    margin: auto;
    background: #f0f1f5;
    border-radius: 18px; 
    padding: 30px;
    box-shadow: 0 25px 50px rgba(0,0,0,0.25);
  ">

    <!-- Heading -->
    <h1 style="
      text-align: center;
      color: #4f46e5;
      margin-bottom: 8px;
      font-size: 28px;
    ">
      ðŸ‘¥Customers List
    </h1>

    <!-- Add Button -->
    <div style="text-align: right; margin-bottom: 20px;">
      <%= link_to "âž• Add New Customer", new_customer_path, style: "
        background: linear-gradient(90deg, #4f46e5, #6366f1);
        color: white;
        padding: 12px 22px;
        text-decoration: none;
        border-radius: 22px;
        font-size: 14px;
        font-weight: bold;
        box-shadow: 0 8px 15px rgba(79,70,229,0.3);
      " %>
    </div>

    <!-- Table -->
    <table style="
      width: 100%;
      border-collapse: collapse;
      text-align: center;
      overflow: hidden;
      border-radius: 12px;
    ">
      <thead>
        <tr style="background: #4f46e5; color: white;">
          <th style="padding: 14px;">Name</th>
          <th style="padding: 14px;">Email</th>
          <th style="padding: 14px;">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr style="border-bottom: 1px solid #eee;">
            <td style="padding: 14px;"><%= customer.name %></td>
            <td style="padding: 14px;"><%= customer.email %></td>

            <!-- ACTION BUTTONS -->
            <td style="
              padding: 14px;
              display: flex;
              gap: 8px;
              justify-content: center;
              align-items: center;
            ">

              <!-- View -->
              <%= link_to "ðŸ‘ View", customer, style: "
                background: #2563eb;
                color: white;
                padding: 7px 16px;
                border-radius: 18px;
                text-decoration: none;
                font-size: 13px;
                font-weight: 500;
              " %>

              <!-- Edit -->
              <%= link_to "âœ Edit", edit_customer_path(customer), style: "
                background: #059669;
                color: white;
                padding: 7px 16px;
                border-radius: 18px;
                text-decoration: none;
                font-size: 13px;
                font-weight: 500;
              " %>

              <!-- Delete (IMPORTANT: button_to) -->
              <%= button_to "ðŸ—‘ Delete", customer,
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this customer?" },
                  style: "
                    background: #dc2626;
                    color: white;
                    padding: 7px 16px;
                    border-radius: 18px;
                    border: none;
                    font-size: 13px;
                    font-weight: 500;
                    cursor: pointer;
                  " %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
