<div style="
  min-height: 100vh;
  background: linear-gradient(120deg, #5670f0, #9333ea, #f0f1f5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  font-family: 'Segoe UI', Arial, sans-serif;
">

  <div style="
    width: 100%;
    max-width: 500px;
    background: #ffffff;
    padding: 40px 30px;
    border-radius: 20px;
    box-shadow: 0 25px 50px rgba(0,0,0,0.15);
  ">

    <!-- Heading -->
    <h2 style="
      text-align: center;
      color: #4f46e5;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 35px;
    ">
      ğŸ“ Customer's Form
    </h2>

    <%= form_with(model: customer, local: true) do |form| %>

      <!-- Name Field -->
      <div style="margin-bottom: 25px;">
        <%= form.label :name, style: "display:block; margin-bottom:8px; color:#4b5563; font-weight:500;" %>
        <%= form.text_field :name, style: "
          width:100%;
          padding:12px;
          border-radius:12px;
          border:1px solid #d1d5db;
          font-size:14px;
          transition: border 0.2s;
        ", onfocus: "this.style.border='#4f46e5'", onblur: "this.style.border='#d1d5db'" %>
      </div>

      <!-- Email Field -->
      <div style="margin-bottom: 30px;">
        <%= form.label :email, style: "display:block; margin-bottom:8px; color:#4b5563; font-weight:500;" %>
        <%= form.email_field :email, style: "
          width:100%;
          padding:12px;
          border-radius:12px;
          border:1px solid #d1d5db;
          font-size:14px;
          transition: border 0.2s;
        ", onfocus: "this.style.border='#4f46e5'", onblur: "this.style.border='#d1d5db'" %>
      </div>

      <div style="margin-bottom: 30px;">
      <%= form.label :about_me, "About Me",style: "display:block; margin-bottom:8px; color:#4b5563; font-weight:500;" %>
      <%= form.rich_text_area :about_me, class: "form-input" %>
      </div>




      <!-- Submit Button -->
      <div style="text-align: center; margin-bottom: 25px;">
        <%= form.submit "ğŸ’¾ Save Customer", style: "
          background: linear-gradient(90deg, #4f46e5, #6366f1);
          color: #ffffff;
          padding: 12px 35px;
          border: none;
          border-radius: 25px;
          cursor: pointer;
          font-size: 15px;
          font-weight: 600;
          transition: transform 0.2s, background 0.2s;
        ", onmouseover: "this.style.transform='scale(1.05)'; this.style.background='linear-gradient(90deg, #4338ca, #5b4fcf)'", onmouseout: "this.style.transform='scale(1)'; this.style.background='linear-gradient(90deg, #4f46e5, #6366f1)'" %>
      </div>

    <% end %>

    <!-- Bottom Link -->
    <div style="text-align: center; margin-top: 20px;">
      <%= link_to "â¬… Back to Customers", customers_path, style: "
        text-decoration: none;
        color: #ffffff;
        background: #4f46e5;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
        transition: transform 0.2s, background 0.2s;
      ", onmouseover: "this.style.background='#4338ca'; this.style.transform='scale(1.05)'", onmouseout: "this.style.background='#4f46e5'; this.style.transform='scale(1)'" %>
    </div>

  </div>
</div>
